<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/Navbar') %>
    <%- include('./partials/head') %>
      <title>Home</title>
</head>




<body>
  <%- include('./partials/script') %>
    <% if (AllBlogs.length>0) { %>

      <div class="container mt-4">
        <div class="row">
          <% AllBlogs.forEach(element=> { %>
            <div class="col-md-4 col-lg-3 mb-4">
              <div class="card h-100">
                <div class="card-img-wrapper" style="position: relative; width: 100%; padding-top: 56.25%;">
                  <img src="<%= element.coverImageURL %>" class="card-img-top"
                    style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;"
                    alt="Unable to load image">
                </div>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= element.title %>
                  </h5>
                  <p class="card-text">
                    <%= element.Body.substring(0,50) %>...
                  </p>

                  <a href="/blog/<%=element._id %>" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>


      <% } else { %>
        <h1>No Blogs to read</h1>
        <% } %>


</body>

</html>