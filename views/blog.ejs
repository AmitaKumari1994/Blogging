<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('./partials/head') %>
        <title>Blog</title>
    <!-- <link rel="stylesheet" href="../public/css/comment.css"> -->
</head>

<body>
    <%- include('./partials/Navbar') %>

    <div class="container mt-4">
        <% if (blog) { %>
            <h1><%= blog.title %></h1>
            <img src="<%= blog.coverImageURL %>" alt="Cover Image" class="img-fluid">
            <pre><%= blog.Body %></pre>
        </div>

        <div class="container mt-3">
            <h6 class="bold">Created By: <%= user.name %></h6>
        </div>

        <div class="container mt-3">
            <h2>Comments(<%= comment.length %>)</h2>
            <div class="comment-container">
                <% if (comment && comment.length > 0) { %>
                    <% comment.forEach(item => { %>
                        <div class="container ">
                            
                                <img src="<%= item.createdBy.ProfileImageURL %>" alt="unable to load image"   width="30px" class="comment-author-img">
                                <span><%= item.createdBy.fullName %></span>
                                <pre><%= item.content %></pre>
                                
                            <!-- <div class="container">
                                
                            </div>
                            <div class="container">
                                
                            </div> -->
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No comments yet.</p>
                <% } %>
            </div>

            <form action="/comment/add/<%= blog._id %>" method="post" class="comment-form">
                <label for="comment">Comment</label>
                <input type="text" id="comment" name="comment" placeholder="Add your comment" />
                <button type="submit" class="btn btn-sm btn-primary">Post</button>
            </form>
        </div>
    <% } else { %>
        <h1>The required blog not found</h1>
    <% } %>

    <!-- <script src="/views/blog.ejs"></script> -->
</body>

</html>


</html>